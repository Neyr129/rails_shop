                <li><%= link_to "Home", items_path %></li>
                <li><%= link_to "Help", '#' %></li> 
                <!-- Аутентификация -->
                <% if user_signed_in? %>
                    <li><%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %></li>        
                    <li><%= link_to current_user.email , current_user%><li>  
                <% else %>
                    <li>
                      <%= link_to 'Login', new_user_session_path %> </li>  <li> <%= link_to 'Sign up', new_user_registration_path %>
                    </li>
                <% end %>
                <!-- ############## -->
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>


    <div class="container">
